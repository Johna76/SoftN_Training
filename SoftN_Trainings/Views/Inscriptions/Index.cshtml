@model IEnumerable<SoftN_Trainings.Models.BO.Inscription>

@{
    ViewBag.Title = "Inschrijvingen Overzicht";
}

<h2>Index</h2>

<div class="col-md-12">
    <div class="col-md-6">       
    </div>
    <div class="col-md-6">
        @using (Html.BeginForm("Index", "Inscriptions", FormMethod.Post, new { id = "sortingForm" }))
        {
            <div class="col-md-6">
                All Inscriptions: @Html.RadioButton("typeList", "AllInscrip", false, new { @class = "radio" })
            </div>
            <div class="col-md-6">
                Upcoming Inscriptions: @Html.RadioButton("typeList", "UpcomingInscrip", true, new { @class = "radio" })
            </div>


        }
    </div>
</div>

<p>
    @Html.ActionLink("Create New", "Index", "Sessions")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Session.Training.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LastName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FirstName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CompanyName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NumberAttendees)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.WaitingList)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Session.Training.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LastName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FirstName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CompanyName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NumberAttendees)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.WaitingList)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.ID }) |
            @Html.ActionLink("Details", "Details", new { id = item.ID }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.ID })
        </td>
    </tr>
}

</table>
@section Javascript
    {
    <script>
        $(function () {
            $('#sortingForm .radio').change(function () {
                $('#sortingForm').submit();
            });
        });
    </script>
}